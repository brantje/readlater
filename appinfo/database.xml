<?xml version="1.0" encoding="ISO-8859-1" ?>
<database>
	<name>*dbname*</name>
	<create>true</create>
	<overwrite>true</overwrite>
	<charset>utf8</charset>
	<table>
		<name>*dbprefix*readlater_items</name>
		<declaration>
			<field>
				<name>id</name>
				<type>integer</type>
                <notnull>true</notnull>
                <autoincrement>1</autoincrement>
				<length>4</length>
			</field>
			<field>
				<name>url</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>4096</length>
			</field>
			<field>
				<name>title</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>4096</length>
			</field>			
			<field>
				<name>description</name>
				<type>text</type>
				<default></default>
				<notnull>false</notnull>
				<length>4096</length>
			</field>
			<field>
				<name>keywords</name>
				<type>text</type>
				<default></default>
				<notnull>false</notnull>
				<length>4096</length>
			</field>
			<index>
				<name>readlater_items_id</name>

				<field>
					<name>id</name>

				</field>
			</index>
		</declaration>
	</table>

	<table>
		<name>*dbprefix*readlater_tags</name>
		<declaration>
			<field>
				<name>readlater_id</name>
				<type>integer</type>
				<length>64</length>
			</field>

			<field>
				<name>tag</name>
				<type>text</type>
				<default></default>
				<notnull>true</notnull>
				<length>255</length>
			</field>
			<index>
				<name>readlater_tag</name>
				<unique>true</unique>
				<field>
					<name>readlater_id</name>
					<sorting>ascending</sorting>
				</field>
				<field>
					<name>tag</name>
					<sorting>ascending</sorting>
				</field>
			</index>
		</declaration>
	</table>
</database>

